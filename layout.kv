<Button>
	background_color: (2/255, 10/255, 24/255)

<MyContent>
	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height
		cols: 1
		
		TextInput:
			id: _entry
			text: '0'
			font_size: 43
			multiline: False
			halign: 'right'
			background_color: (20/255, 20/255, 30/255, 1)
			foreground_color: (1, 1, 1, 1)
			size_hint: None, None
			size: root.width, 100
			
		BoxLayout:
			size_hint: None, None
			size: root.width, root.height - _entry.height
			orientation: 'vertical'
	
			BoxLayout:
				orientation: 'horizontal'
		
				Button:
					text: 'C'
					font_size: 43
					background_color: (1, 0, 0)
					on_press: root.clear()
			
				Button:
					text: 'Del'
					font_size: 43
					background_color: (14/255, 73/255, 174/255, 1)
					on_press: root.remove()
			
				Button:
					text: '+'
					font_size: 43
					background_color: (14/255, 73/255, 174/255, 1)
					on_press: root.set_operation('+')
			
				Button:
					text: '-'
					font_size: 43
					background_color: (14/255, 73/255, 174/255, 1)
					on_press: root.set_operation('-')
		
			BoxLayout:
				orientation: 'horizontal'
		
				Button:
					text: '1'
					font_size: 43
					on_press: root.set_value(1)
			
				Button:
					text: '2'
					font_size: 43
					on_press: root.set_value(2)
			
				Button:
					text: '3'
					font_size: 43
					on_press: root.set_value(3)
			
				Button:
					text: '/'
					font_size: 43
					background_color: (14/255, 73/255, 174/255, 1)
					on_press: root.set_operation('/')
		
			BoxLayout:
				orientation: 'horizontal'
		
				Button:
					text: '4'
					font_size: 43
					on_press: root.set_value(4)
			
				Button:
					text: '5'
					font_size: 43
					on_press: root.set_value(5)
			
				Button:
					text: '6'
					font_size: 43
					on_press: root.set_value(6)
			
				Button:
					text: '*'
					font_size: 43
					background_color: (14/255, 73/255, 174/255, 1)
					on_press: root.set_operation('*')
		
			BoxLayout:
				orientation: 'horizontal'
		
				Button:
					text: '7'
					font_size: 43
					on_press: root.set_value(7)
			
				Button:
					text: '8'
					font_size: 43
					on_press: root.set_value(8)
			
				Button:
					text: '9'
					font_size: 43
					on_press: root.set_value(9)
			
				Button:
					text: '='
					font_size: 43
					background_color: (14/255, 73/255, 174/255, 1)
					on_press: root.equal()
			
			BoxLayout:
				orientation: 'horizontal'
		
				Button:
					text: '0'
					font_size: 43
					on_press: root.set_value(0)
			
				Button:
					text: '00'
					font_size: 43
					on_press: root.set_value('00')
			
				Button:
					text: '.'
					font_size: 43
					on_press: root.set_value('.')
					
				Button:
					text: '%'
					font_size: 43
					on_press: root.set_value('%')
					background_color: (14/255, 73/255, 174/255, 1)